@page
@model WebApplication2.Pages.Titulos.GridModel
@{
}

<div class="container">
   
    <div class="card">
        <div class="card-header">
            Títulos
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridTitulos" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Id Título</th>
                                <th>Descripcion</th>
                                <th>Estado</th>
                                <th>Acción</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridListTitulos)
                            {
                                <tr>
                                    <td>@item.Id_Titulo</td>
                                    <td>@item.Descripcion</td>
                                    <td>@(item.Estado?"Activo":"Inactivo")</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.Id_Titulo">
                                            <i class='bx bxs-edit'></i>
                                        </a>

                                        <button type="button" class="btn btn-primary"
                                                onclick="TitulosGrid.OnClickEliminar(@item.Id_Titulo)">
                                            <i class='bx bx-trash'></i>
                                        </button>

                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>  
</div>

@section Scripts{ 
    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/Titulos/Grid.js"></script>

}
